<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TacklingNephrotic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TacklingNephrotic.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="Theme.TacklingNephrotic.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.TacklingNephrotic.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Below theme is for splash screen-->
    <style name="Theme.App.MyTheme" parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_appicon</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/holo_green_light</item>
        <item name="windowSplashScreenBackground">@color/orange</item>
        <item name="postSplashScreenTheme">@style/Theme.MyLoginTheme</item>
        <!-- above line sets theme after splash screen-->
    </style>

    <style name="Theme.MyLoginTheme" parent="Theme.TacklingNephrotic.NoActionBar">
        <item name="android:windowBackground">@color/primaryColor</item>
    </style>
</resources>